<head>
    <%- include("../shared/head") %>

</head>
<body>
    <div class="container">
        <h1>Add a Shop</h1>
        <table class="table table-bordered border-primary">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td><%= name %></td>
                </tr>

                <tr>
                    <td>Email</td>
                    <td><%= email %></td>
                </tr>
                
                <tr>
                    <td>Phone</td>
                    <td><%= phone %></td>
                </tr>

                <tr>
                    <td>Delivery address</td>
                    <td><%= address %>, <%= city %>, <%= postalCode %>, <%= province %></td>
                </tr>
                
                <tr>
                    <td><%=productOne %> Product 1 @ $3</td>
                    <td>$<%= productOne*3 %></td>
                </tr>

                <tr>
                    <td><%=productTwo %> Product 2 @ $5</td>
                    <td>$<%= productTwo*5 %></td>
                </tr>

                <tr>
                    <td><%=productThree %> Product 3 @ $7</td>
                    <td>$<%= productThree*7 %></td>
                </tr>

                <tr>
                    <td>Shipping charge</td>
                    <td>$<%= shippingCharge %></td>
                </tr>

                <tr>
                    <td>Subtotal</td>
                    <td><%=  subtotal %></td>
                </tr>

                <tr>
                    <td>Tax Amount @ $<%= taxAmount %></td>
                    <td><%= totalTax %></td>
                </tr>
            
                <tr>
                    <td>Total</td>
                    <td><%= totalCost%></td>
                </tr>
            </tbody>
        </table>
        <%- include("../shared/footer") %>
    </div>
    
    <%- include("../shared/scripts") %>
</body>
